    <div id="top-container" class="container-fluid">
        <h1 id="main-title" class="text-center">Diga olá para o seu primeiro emprego!</h1>
        <p id="main-subtitle" class="text-center">Somos o site com as principais vagas do ramo tecnológico do mercado!</p>
        <form id="search-form" class="form-inline" action="/" method="GET">
            <div class="form-group col-md-10">
                <input type="text" class="form-control" id="job" name="job" placeholder="Encontre a sua vaga">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>

    <main>
        <div id="jobs-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if search}}
                        <h2 id="job-list-title">Resultados para: {{search}}</h2>
                    {{else}}
                        <h2 id="job-list-title">Vagas em destaque</h2>
                    {{/if}}
                    <ul id="job-list" class="list-group">
                        {{#each jobs}}
                        <li class="list-group-item {{#if dataValues.new_job}}new-job{{/if}}">
                            <img src="/img/company.svg" alt="Company">
                            <h2>{{dataValues.company}}</h2>
                            <p>{{dataValues.title}}</p>
                            <p>{{dataValues.salary}}</p>
                            <span class="new-job-label">Nova!</span>
                            <a href="/jobs/view/{{dataValues.id}}" class="btn btn-primary">Candidatar-se</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </main>